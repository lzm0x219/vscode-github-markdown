{
  "name": "vscode-markdown-github",
  "displayName": "Github Markdown",
  "version": "1.2.0",
  "description": "A GitHub-style VSCode built-in markdown preview plugin.",
  "categories": [
    "Other"
  ],
  "keywords": [
    "github",
    "github markdown",
    "markdown",
    "markdown style",
    "markdown theme"
  ],
  "homepage": "https://github.com/lzm0x219/vscode-markdown-github#readme",
  "bugs": {
    "url": "https://github.com/lzm0x219/vscode-markdown-github/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lzm0x219/vscode-markdown-github.git"
  },
  "license": "MIT",
  "author": {
    "name": "Monet Bird"
  },
  "publisher": "lzm0x219",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "pnpm clean && pnpm check:typings",
    "build": "concurrently npm:build:* -c 'auto'",
    "build:css": "tsx scripts/buildStyles",
    "build:extension": "esbuild src/main.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node --minify --analyze",
    "build:web": "esbuild web/main.ts --bundle --outfile=dist/web.js --minify --analyze",
    "check:typings": "tsc",
    "clean": "del dist",
    "predev": "pnpm clean",
    "dev": "concurrently npm:dev:* -c 'auto'",
    "dev:css": "tsx scripts/buildStyles -w",
    "dev:extension": "esbuild src/main.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "dev:web": "esbuild web/main.ts --bundle --outfile=dist/web.js --sourcemap --watch",
    "preinstall": "npx only-allow pnpm -y",
    "lint": "rome check",
    "package": "pnpm vsce package --no-dependencies",
    "package:pre": "pnpm vsce package --pre-release --no-dependencies",
    "prepare": "is-ci || husky install",
    "release": "pnpm vsce publish --no-dependencies",
    "release:pre": "pnpm vsce publish --pre-release --no-dependencies",
    "vscode:prepublish": "pnpm build"
  },
  "contributes": {
    "commands": [
      {
        "command": "vscode-markdown-github.changeTheme",
        "title": "Github Markdown: Change Preview Theme"
      }
    ],
    "configuration": {
      "title": "Github Markdown",
      "properties": {
        "vscode-markdown-github.theme": {
          "type": "string",
          "description": "Color theme for the styling of the Markdown preview.",
          "enum": [
            "github-light-default",
            "github-dark-default",
            "vscode-theme-auto"
          ],
          "enumItemLabels": [
            "Github Light",
            "Github Dark",
            "Auto"
          ],
          "enumDescriptions": [
            "Always use a GitHub-style light theme.",
            "Always use a GitHub-style dark theme.",
            "Always use VSCode's current theme."
          ],
          "default": "github-light-default"
        }
      }
    },
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./dist/web.js"
    ],
    "markdown.previewStyles": [
      "./dist/main.css"
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-markdown-github.changeTheme",
          "when": "editorLangId == markdown"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:vscode-markdown-github.changeTheme"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,cjs}": [
      "rome format --write",
      "rome check"
    ],
    "*.{md,html,css,json,yml}": "prettier --write",
    "!(*pnpm-lock).yaml": "prettier --write",
    "package.json": "pnpm sort-package-json"
  },
  "dependencies": {
    "highlight.js": "11.7.0",
    "markdown-it-emoji": "2.0.2",
    "markdown-it-footnote": "3.0.3",
    "markdown-it-github-headings": "2.0.1",
    "markdown-it-highlightjs": "4.0.1",
    "markdown-it-task-lists": "2.1.1"
  },
  "devDependencies": {
    "@types/markdown-it": "12.2.3",
    "@types/node": "18.11.14",
    "@types/vscode": "1.41.0",
    "@vscode/test-electron": "2.2.1",
    "@vscode/vsce": "2.15.0",
    "concurrently": "7.6.0",
    "del-cli": "5.0.0",
    "esbuild": "0.16.5",
    "esbuild-sass-plugin": "2.4.3",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "prettier-plugin-packagejson": "2.3.0",
    "rome": "11.0.0",
    "sort-package-json": "2.1.0",
    "tsx": "3.12.1",
    "typescript": "4.9.4",
    "zx": "7.1.1"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "icon": "assets/logo.png",
  "pricing": "Free"
}
